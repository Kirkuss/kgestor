<h1>New user</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :permission %>
  <%= f.text_field :permission %><br>
  <%= f.submit "Create" %>
<% end %>
